<%- include('partials/header') -%>
    <section id="explore-recipes">
      <section
        class="container p-5 mx-auto space-x-1 justify-around max-w-2xl py-16 px-8 sm:py-24 lg:max-w-7xl lg:px-8"
      >
        <!-- Clothes -->
        <div
          class="mt-6 px-8 grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-3 xl:gap-x-8"
        >
        <% for(var i=0; i<recipes.length; i++) {%>
        <!-- 1st item -->
          <div class="group relative">
            <div
              class="min-h-80 w-full overflow-hidden rounded-md bg-gray-200 group-hover:opacity-75 lg:aspect-none lg:h-80"
            >
              <img
                src="<%= recipes[i].image%>"
                alt=""
                class="h-full w-full object-cover object-center lg:h-full lg:w-full"
              />
            </div>
            <div class="mt-4 flex justify-between">
              <div>
                <h3 class="text-sm text-gray-700">
                  <a href="/recipe/<%= recipes[i]._id%>">
                    <span aria-hidden="true" class="absolute inset-0"></span>
                    <%= recipe.title %>
                  </a>
                </h3>
                
                <h5 class="text-sm font-medium text-gray-500">CreatedBy <span><%= recipe.createdBy %></span></h5>
                <p class="mt-1 text-sm text-gray-500">Black</p>
              </div>
              <div>
                <i class="fa-regular fa-heart text-sm font-medium text-gray-900"></i>
                <i class=" hidden fa-solid fa-heart text-sm font-medium text-gray-900"></i>

                <span><%= recipe.likes %></span>
              </div>
              
            </div>
          </div>
          <% } %>
        </div>
        </div>
      </section>
    </section>
    <%- include('partials/footer') -%>
