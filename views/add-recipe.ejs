<%- include('partials/header') -%>
    <section id="add-recipe">
      <section class="container p-5 px-2 md:px-8 mx-auto" >
        <form class="md:grid p-5 px-8 mt-5 md:mt-0" action="/post/createPost" enctype='multipart/form-data' method="POST">
          <div class="shadow sm:overflow-hidden sm:rounded-md">
            <div class="space-y-6 bg-white px-4 py-5 sm:p-6">
                <!-- title -->
                <div>
                    <label for="foodTitle" class="block text-sm font-medium text-gray-700">Title/Name of the Food</label>
                    <input type="text" name="foodTitle" id="foodTitle" autocomplete="foodTitle" class="p-1.5 mt-1 block w-full rounded-md border-2 border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                  </div>
        
<!-- picture -->
<div>
    <label class="block text-sm font-medium text-gray-700">Image</label>
    <div class="mt-1 flex justify-center rounded-md border-2 border-dashed border-gray-300 px-6 pt-5 pb-6">
      <div class="space-y-1 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48" aria-hidden="true">
          <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
        <div class="flex text-sm text-gray-600">
          <label for="imgUpload" class="relative cursor-pointer rounded-md bg-white font-medium text-indigo-600 focus-within:outline-none focus-within:ring-2 focus-within:ring-indigo-500 focus-within:ring-offset-2 hover:text-indigo-500">
            <span>Upload a file</span>
            <input id="imgUpload" name="imgUpload" type="file" class="sr-only">
          </label>
          <p class="pl-1">or drag and drop</p>
        </div>
        <p class="text-xs text-gray-500">PNG, JPG, GIF up to 10MB</p>
      </div>
    </div>
  </div>


              <!-- Ingredients -->
              <div>
                <label for="ingredients" class="block text-sm font-medium text-gray-700">Ingredients</label>
                <div class="mt-1">
                  <textarea id="ingredients" name="ingredients" rows="3" class="p-1.5 mt-1 block w-full rounded-md border-2 border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" placeholder="Add ingredients here"></textarea>
                </div>
                <p class="mt-2 text-sm text-gray-500">All ingredients</p>
              </div>

              <!-- Direction -->
              <div>
                <label for="direction" class="block text-sm font-medium text-gray-700">Direction</label>
                <div class="mt-1">
                  <textarea id="direction" name="direction" rows="3" class="p-1.5 mt-1 block w-full rounded-md border-2 border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" placeholder="Add direction explanation here"></textarea>
                </div>
                <p class="mt-2 text-sm text-gray-500">Direction explanation</p>
              </div>

              <buttton type='submit' class="flex justify-center md:justify-start" value="Upload">
                <a
                  href="#"
                  class="text-center text-sm p-2 px-8 rounded-full bg-brightRed hover:bg-brightRedLight"
                  >Post</a
                ></buttton>

            </div>      
              </div>
            </div>
          </div>
        </form>
      </section>
    </section>

    <%- include('partials/footer') -%>